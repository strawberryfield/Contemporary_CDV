<Window
    x:Class="Casasoft.CCDV.UI.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Casasoft.CCDV.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="350"
    mc:Ignorable="d"
    Icon="/CCDV.ico"
    Title="About">
    <Grid>

        <Image
            x:Name="Logo"
            Width="64"
            Height="64"
            Margin="14,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Label
            Margin="81,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Casasoft"
            FontSize="16"
            FontStyle="Italic"
            FontWeight="Bold" />
        <Label
            Margin="81,39,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Contemporary Carte de Visite tools"
            FontSize="18"
            FontWeight="Bold" />
        <Label
            Margin="14,93,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="copyright © 2020-2022 Roberto Ceccarelli - Casasoft" />
        <Label
            Margin="14,118,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="website:"
            FontStyle="Italic" />
        <TextBlock
            x:Name="linkWebsiste"
            Margin="18,137,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="#FF0000C0">
            <Hyperlink NavigateUri="https://strawberryfield.altervista.org/carte_de_visite" RequestNavigate="Hyperlink_RequestNavigate">https://strawberryfield.altervista.org/carte_de_visite</Hyperlink>
        </TextBlock>
        <Label
            Margin="14,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="source code repository:"
            FontStyle="Italic" />
        <TextBlock
            x:Name="linkSource"
            Margin="17,179,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="#FF0000C0">
            <Hyperlink NavigateUri="https://github.com/strawberryfield/Contemporary_CDV" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/strawberryfield/Contemporary_CDV</Hyperlink>
        </TextBlock>
        <Label
            Margin="14,202,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="license:"
            FontStyle="Italic" />
        <TextBox
            x:Name="txtLicense"
            Grid.ColumnSpan="2"
            Margin="20,225,20,10"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Text="TextBox"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <Label
            x:Name="lblVersion"
            Margin="81,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Version"
            FontStyle="Italic" />
    </Grid>
</Window>