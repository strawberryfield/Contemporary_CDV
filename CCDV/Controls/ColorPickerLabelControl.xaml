<UserControl x:Class="Casasoft.CCDV.UI.ColorPickerLabelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
             xmlns:local="clr-namespace:Casasoft.CCDV.UI"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal">
        <colorpicker:PortableColorPicker x:Name="colorPicker" VerticalAlignment="Top" HorizontalAlignment="Left" ShowAlpha="False" SelectedColor="White" />
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="10,-4,0,0" VerticalAlignment="Top"/>
    </StackPanel>
</UserControl>
