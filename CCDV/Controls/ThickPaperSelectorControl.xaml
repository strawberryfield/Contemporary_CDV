<UserControl x:Class="Casasoft.CCDV.UI.ThickPaperSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Casasoft.CCDV.UI"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal">
        <RadioButton x:Name="rbLarge" Content="20x27" HorizontalAlignment="Left" Width="110" VerticalAlignment="Top" IsChecked="True" GroupName="paperFormat"/>
        <RadioButton x:Name="rbMedium" Content="15x20" HorizontalAlignment="Left"  VerticalAlignment="Top" GroupName="paperFormat"/>
    </StackPanel>
</UserControl>
