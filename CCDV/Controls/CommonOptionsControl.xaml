<UserControl x:Class="Casasoft.CCDV.UI.CommonOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:casasoft="clr-namespace:Casasoft.Xaml.Controls;assembly=Casasoft.Xaml.Controls"
             xmlns:local="clr-namespace:Casasoft.CCDV.UI"
             mc:Ignorable="d" d:DesignWidth="200" Height="65">
    <StackPanel>
        <local:ColorPickerLabelControl x:Name="cpFill" Caption="Colore di riempimento" VerticalAlignment="Top" HorizontalAlignment="Left" ShowAlpha="False" SelectedColor="White" />
        <local:ColorPickerLabelControl x:Name="cpBorder" Caption="Colore dei bordi" VerticalAlignment="Top" HorizontalAlignment="Left" ShowAlpha="False" SelectedColor="Black" RenderTransformOrigin="0.5,0.5" />
        <StackPanel Orientation="Horizontal" >
            <casasoft:NumericUpDown x:Name="txtDPI" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1" Height="18" Width="60" Value="300" MinValue="1">
                <casasoft:NumericUpDown.TBContextMenu>
                    <ContextMenu>
                        <MenuItem Header="72" Click="MenuItem_Click"/>
                        <MenuItem Header="150" Click="MenuItem_Click"/>
                        <MenuItem Header="300" Click="MenuItem_Click"/>
                        <MenuItem Header="600" Click="MenuItem_Click"/>
                    </ContextMenu>
                </casasoft:NumericUpDown.TBContextMenu>
            </casasoft:NumericUpDown>
            <Label x:Name="lblDPI" Content ="DPI" HorizontalAlignment="Left" Margin="0,-4,0,0" VerticalAlignment="Top"/>
        </StackPanel>
    </StackPanel>
</UserControl>
