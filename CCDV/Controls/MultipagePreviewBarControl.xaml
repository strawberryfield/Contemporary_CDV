<UserControl x:Class="Casasoft.CCDV.UI.MultipagePreviewBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Casasoft.CCDV.UI"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="120">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnStart" Content="&#xE100;" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="20" Click="btnStart_Click" FontFamily="Segoe MDL2 Assets" Height="20" FontWeight="Bold"/>
            <Button x:Name="btnBack" Content="&#xE112;" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="20" Click="btnBack_Click"  FontFamily="Segoe MDL2 Assets" Height="20" FontWeight="Bold"/>
            <Button x:Name="btnNext" Content="&#xE0AB;" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="20" Click="btnNext_Click"  FontFamily="Segoe MDL2 Assets" Height="20" FontWeight="Bold"/>
            <Button x:Name="btnEnd" Content="&#xE101;" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="20" Click="btnEnd_Click"  FontFamily="Segoe MDL2 Assets" Height="20" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</UserControl>
